            if($date == $today)
            {
                echo '<tr class="today">';
            }
            else 
            {
                echo '<tr>';
            }
        ?>
        
            <td><?php echo $guest['Reservation']?></td>
            <td><?php echo $guest['Arrival']?></td>
            <td><?php echo $guest['Guest_FirstName'].' '.$guest['Guest_LastName']?></td>
            <td><?php echo $guest['Object Name']?></td>
            <td><?php echo $guest['Number']?></td>
            <td><?php echo $guest['Room Status']?></td>                                
        </tr>
        <?php endforeach;?>
    </tbody>
</table>